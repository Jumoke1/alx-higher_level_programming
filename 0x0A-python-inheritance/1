#!/usr/bin/python3
"""Defines a function to check true"""


def is_same_class(obj, a_class):
    """checks if an object is an instance of a class

    Args:
        obj(any) the object
        a_class (type): The class to match
    Returns:
        if obect is an instance of aa class
        otherwise false
    """
    if type(obj) == a_class:
        return True
    return false
